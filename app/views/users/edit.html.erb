<%= form_for(@user) do |f| %>

<%= f.label :usename %>
<%= f.text_field :username, class: 'form-control' %>

<%= f.label :email %>
<%= f.email_field :email, class: 'form-control' %>

<%= f.label :password %>
<%= f.password_field :password %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>

<%= f.submit "update" %>

<% end %>