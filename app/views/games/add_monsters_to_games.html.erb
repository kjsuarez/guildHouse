<% count = 0 %>

<%= form_tag("/statements/do_action", method: "post") do %>
	<% @monsters.each do |monster| %>
		<%= label_tag("monster"+count.to_s, monster.name) %>
		<%= check_box_tag("monster"+count.to_s) %>
		<% count +=1 %>
	<% end %>
	<%= submit_tag("add to your game") %>
	<%= hidden_field_tag(:game_id, @game.id) %>
<% end %>