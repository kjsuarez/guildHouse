<p> body: <%= @game.body %> </p>

<% @monsters.each do |monster| %>
	<%= monster.name %>
	<%= "hi" %>
<% end %>

<%= form_tag("/games/add_monster", method: "post") do %>
	<% @monsters.each do |monster| %>
		<%= label_tag("monster"+count.to_s, monster.name) %>
		<%= check_box_tag("monster"+count.to_s) %>
		<% count +=1 %>
	<% end %>
	<%= submit_tag("add to game") %>
	<%= hidden_field_tag(:game_id, @game.id) %>		
<% end %>