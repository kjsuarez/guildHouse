<p> <%= link_to "DM a new game", "/games/new" %> </p>
<p> <%= link_to "join a game somebody else started", "/games" %> </p>

<h3> games you're playing </h3>
<% @games_you_play.each do |game| %>
	<% @owner = User.find(game.gamemaster_id) %>
	<ul>
		<%= link_to "#{ @owner.email}'s game", new_game_statement_path(game) %>
	</ul>
<% end %>

<h3> games you run </h3>
<% @your_games.each do |game| %>
	<% @owner = User.find(game.gamemaster_id) %>
	<ul>
		<%= link_to "#{ @owner.email}'s game", new_game_statement_path(game) %>
	</ul>
<% end %>